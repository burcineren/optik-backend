generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
 // extensions = [pg_trgm, uuid_ossp] // Enable useful PostgreSQL extensions
}


// User roles
enum Role {
  ADMIN
  USER
  GUEST
}

// User model
model User {
  id          String    @id @default(uuid())
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  isActive    Boolean   @default(true) @map("is_active")
  email       String    @unique
  password    String
  name        String    @map("name")
  role        Role      @default(USER)
  lastLogin   DateTime? @map("last_login")
  refreshToken String?  @map("refresh_token")
  
  // Relations
  profile     UserProfile?
  orders      Order[]
  addresses   Address[]
  
  @@map("users")
}

// User profile (1:1 with User)
model UserProfile {
  id          String    @id @default(uuid())
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  isActive    Boolean   @default(true) @map("is_active")
  bio         String?
  avatarUrl   String?   @map("avatar_url")
  phone       String?
  dateOfBirth DateTime? @map("date_of_birth")
  
  // Relations
  userId      String    @unique @map("user_id")
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Customer relation (one-to-one)
 // customer    Customer? @relation("CustomerProfile")
  
  @@map("user_profiles")
}

model Customer {
    id        String   @id @default(uuid())
    createdAt   DateTime  @default(now()) @map("created_at")
    updatedAt   DateTime  @updatedAt @map("updated_at")
    isActive    Boolean   @default(true) @map("is_active")
    tcIdentityNumber String   @unique @db.VarChar(11) @map("tc_identity_number")
    fullName        String    @map("full_name")
    phoneNumber      String?  @map("phone_number") // Optional phone number (nullable)
    email            String?  @map("email")        // Optional email address (nullable)
    address          String?  @map("address")      // Optional customer address (nullable)
    
    // Relations
    orders    Order[]
   // addresses   Address[]

    // Relation Fields
    // One-to-one relation assumption: A customer can have one relative record.
   relative    Relative?
    @@map("customers")
}
model Relative {
  // Fields
  id               String      @id @default(uuid()) // Auto-increment primary key
  
  // Relative Details
  fullName         String   @map("full_name")
  
  // T.C. Identity Number: Not set to @unique as it might not be required 
  // to be unique across all relatives, or the same relative might be 
  // registered for different customers (e.g., a family member).
  tcIdentityNumber String   @db.VarChar(11) @map("tc_identity_number")
  
  // Relation Fields
  // Foreign key to the Customer model.
  // @unique ensures a one-to-one relationship (one relative record per customer).
  customerId       String      @unique @map("customer_id")
  customer         Customer @relation(fields: [customerId], references: [id])
  
  @@map("relatives") // Defines the database table name
}

// Address model
model Address {
  id          String    @id @default(uuid())
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  isActive    Boolean   @default(true) @map("is_active")
  title       String
  receiver   String
  phone      String
  city       String
  district   String
  address    String
  isDefault  Boolean   @default(false) @map("is_default")
  
  // Relations
  userId     String    @map("user_id")
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders     Order[]
  
  @@map("addresses")
}

// Product category
model Category {
  id          String    @id @default(uuid())
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  isActive    Boolean   @default(true) @map("is_active")
  name        String    @unique
  description String?
  imageUrl    String?   @map("image_url")
  slug        String    @unique
  
  // Relations
  products    Product[]
  
  @@map("categories")
}

// Product model with variants support
model Product {
  id            String    @id @default(uuid())
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  isActive      Boolean   @default(true) @map("is_active")
  name          String
  description   String
  price         Float     @default(0)  // Base price, can be overridden by variants
  stock         Int       @default(0)  // Total stock across all variants
  sku           String?   @unique      // Base SKU, can be overridden by variants
  images        String[]  // Array of image URLs
  isFeatured    Boolean   @default(false) @map("is_featured")
  
  // Relations
  categoryId    String    @map("category_id")
  category      Category  @relation(fields: [categoryId], references: [id])
  variants      ProductVariant[]
  orderItems    OrderItem[]
  
  @@map("products")
}

// Stock movement types
enum StockMovementType {
  PURCHASE     // Stok girişi
  SALE         // Satış
  RETURN       // İade
  ADJUSTMENT   // Düzeltme
  TRANSFER     // Transfer
  LOSS         // Zayi
  DAMAGED      // Hasarlı
  OTHER        // Diğer
}

// Stock movement status
enum StockMovementStatus {
  PENDING
  COMPLETED
  CANCELLED
}

// Product variant
model ProductVariant {
  id          String    @id @default(uuid())
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  isActive    Boolean   @default(true) @map("is_active")
  sku         String    @unique
  barcode     String?   @unique
  name        String
  description String?
  price       Float     @default(0)
  costPrice   Float?    @map("cost_price")
  stock       Int       @default(0)
  minStock    Int       @default(5) @map("min_stock")
  maxStock    Int?      @map("max_stock")
  weight      Float?    @default(0) // in grams
  dimensions  String?   // Format: "LxWxH" in cm
  
  // Relations
  productId   String    @map("product_id")
  product     Product   @relation(fields: [productId], references: [id])
  
  // Stock movements
  stockMovements StockMovement[]
  
  @@map("product_variants")
}

// Stock movement
model StockMovement {
  id              String            @id @default(uuid())
  createdAt       DateTime          @default(now()) @map("created_at")
  updatedAt       DateTime          @updatedAt @map("updated_at")
  movementType    StockMovementType @map("movement_type")
  status          StockMovementStatus @default(PENDING)
  quantity        Int
  unitPrice       Float             @map("unit_price")  // Birim fiyat
  totalPrice      Float             @map("total_price") // Toplam fiyat
  referenceNo     String?           @map("reference_no") // Fatura/İrsaliye no
  notes           String?           // Açıklama
  movementDate    DateTime          @default(now()) @map("movement_date") // İşlem tarihi
  
  // Relations
  variantId       String           @map("variant_id")
  variant         ProductVariant   @relation(fields: [variantId], references: [id])
  
  // User who made the movement
  userId          String?          @map("user_id")
  //user            User?            @relation(fields: [userId], references: [id])
  
  // Related order (if any)
  orderId         String?          @map("order_id")
 //order           Order?           @relation(fields: [orderId], references: [id])
  
  @@map("stock_movements")
}


// Order status
enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

// Order model
model Order {
  id           String      @id @default(uuid())
  createdAt    DateTime    @default(now()) @map("created_at")
  updatedAt    DateTime    @updatedAt @map("updated_at")
  isActive     Boolean     @default(true) @map("is_active")
  orderNumber  String      @unique @map("order_number")
  totalAmount  Float       @map("total_amount")
  status       OrderStatus @default(PENDING)
  notes        String?
  
  // Relations
  userId       String      @map("user_id")
  user         User        @relation(fields: [userId], references: [id])
  addressId    String      @map("address_id")
  address      Address     @relation(fields: [addressId], references: [id])
  items        OrderItem[]

  // Relation Fields
  // DÜZELTME: Burayı 'Int' yerine 'String' yapın
  customerId      String   @map("customer_id")
  customer         Customer @relation(fields: [customerId], references: [id])

  @@map("orders")
  
}

// Order items (join table between Order and Product)
model OrderItem {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  isActive    Boolean  @default(true) @map("is_active")
  quantity    Int
  price      Float
  
  // Relations
  orderId    String  @map("order_id")
  order      Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId  String  @map("product_id")
  product    Product @relation(fields: [productId], references: [id])
  
  @@unique([orderId, productId])
  @@map("order_items")
}

